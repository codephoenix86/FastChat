{
  "name": "fastchat",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/(middlewares|services|utils) --coverage",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:integration:watch": "jest --testPathPattern=tests/integration --watch --runInBand",
    "test:integration:coverage": "jest --testPathPattern=tests/integration --coverage --runInBand",
    "test:verbose": "jest --verbose --coverage",
    "test:all": "jest --coverage --runInBand",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codephoenix86/fastchat.git"
  },
  "keywords": [
    "chat",
    "real-time",
    "socket.io",
    "nodejs",
    "rest-api",
    "production-ready"
  ],
  "author": "Naresh Lohar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codephoenix86/fastchat/issues"
  },
  "homepage": "https://github.com/codephoenix86/fastchat#readme",
  "description": "A highly scalable, feature-rich chat API for modern applications, supporting real-time messaging, presence, media sharing, and advanced conversation management",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "express-request-id": "^3.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.18.3",
    "ms": "^2.1.3",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.2.2"
  },
  "_moduleAliases": {
    "@": "src",
    "@root": ".",
    "@config": "src/config",
    "@constants": "src/constants",
    "@controllers": "src/controllers",
    "@docs": "src/docs",
    "@middlewares": "src/middlewares",
    "@models": "src/models",
    "@repositories": "src/repositories",
    "@routes": "src/routes",
    "@services": "src/services",
    "@sockets": "src/sockets",
    "@tests": "src/tests",
    "@utils": "src/utils",
    "@uploads": "uploads",
    "@auth": "src/utils/auth",
    "@errors": "src/utils/errors",
    "@helpers": "src/utils/helpers",
    "@response": "src/utils/response"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}